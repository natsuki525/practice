<div class="container mx-auto" style="width: 400px;">
<%= form_for (@shipping) do |f| %>
	<h3 class="text-center">配送先編集</h3>
	<br>
	<div class="shipping-edit">
		<tr>
			<th>郵便番号</th>
			<td><%= f.text_field :postcode, class:"form-control" %></td>
		</tr>
		<br>
		<tr>
			<th>住所</th>
			<td><%= f.text_field :address, class:"form-control" %></td>
		</tr>
		<br>
		<tr>
			<th>宛名</th>
			<td><%= f.text_field :address_name, class:"form-control" %></td>
		</tr>
		<br>
		<%= f.submit "編集する",class:"btn btn-outline-primary" %>
	</div>
<% end %>
</div>