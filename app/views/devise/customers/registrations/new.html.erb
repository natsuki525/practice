<div class="container mx-auto" style="width: 600px;">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :"氏名" %>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.text_field :last_name, placeholder:"姓", class:"form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :first_name,placeholder: "名",class:"form-control" %>
    </div>
  </div>

  <%= f.label :"フリガナ" %>
  <div class="form-group row">
    <div class="col-sm-6">
      <%= f.text_field :last_name_kana, placeholder:"セイ", class:"form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :first_name_kana, placeholder:"メイ", class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postcode, placeholder:"000-0000", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, placeholder:"ハイフンなしで入力してください", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :もう一度パスワードを入力してください %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-outline-info w-100 mt-2" %>
  </div>
  <% end %>
  <br>
  <div class="sign_in">
    ログインはこちらから →
    <%= render "devise/customers/shared/links" %>
  </div>

</div>
