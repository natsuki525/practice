<div class="container mx-auto" style="width: 700px;">
	<%= form_for(@genre, url: {controller:"genres", action:"update"}) do |f| %>
	<h3 class="text-center">ジャンル編集</h3>
	<br>
	<div class="row admin-genre-edit">
		<%= f.text_field :name, class:"form-control" %><br>
		<%= f.radio_button :is_active, :true %>有効
		<%= f.radio_button :is_active, :false %>無効<br>
		<%= f.submit "変更を保存する", class:"btn btn-outline-primary" %>
	</div>
	<% end %>
</div>