<%= form_for(@customer) do |f| %>
<div class="container mx-auto" style="width: 600px;">
	<div class="row text-center">
		<h2>登録情報編集</h2>
		<p>退会する</p>
	</div>
	<div class="edit-group row">
		<table class="table">
			<tr>
				<th>氏名</th>
				<td><%=f.text_field :last_name,class:"form-control" %></td><td><%=f.text_field :first_name,class:"form-control" %></td>
			</tr>
			<tr>
				<th>フリガナ</th>
				<td><%= f.text_field :last_name_kana,class:"form-control" %></td><td><%= f.text_field :first_name_kana,class:"form-control" %></td>
			</tr>
			<tr>
				<th>郵便番号</th>
				<td><%= f.text_field :postcode,class:"form-control" %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= f.text_field :address,class:"form-control" %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= f.text_field :phone_number,class:"form-control" %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= f.text_field :email,class:"form-control" %></td>
			</tr>
		</table>
	</div>
	<br>
	<%= f.submit "保存する", class:"btn btn-outline-primary mb-4" %>
</div>
<% end %>