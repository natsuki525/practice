<div class="container">
	<h3 class="text-center">LINE UP</h3>
	<div class="row item-index mx-auto">
		<div class="col-2">
			<table class="table text-center">
				<thead>
					<tr>
						<th>Category</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%= genre.name %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
			<div class="col-4">
				<% @items.each do |item| %>
				<div class="item-image">
					<%= attachment_image_tag item, :image, :fill, 150, 100 %>
				</div>
				<div class="item-name">
					<%= link_to item_path(item.id) do %>
						<%= item.name %>
					<% end %>
				</div>
				<div class="item-price">
					<%= item.price * 1.08 %>å††
				</div>
				<% end %>
			</div>
	</div>
</div>